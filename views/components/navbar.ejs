<script src="/javascripts/navbar.js"></script>
<script>
    const token = localStorage.getItem('token');
    const urlHome = '/homepage?token='+token;
    const urlMyProfile = '/my-profile?token=' + token;
    $("#home").attr('href', urlHome);
    $("#my-profile").attr('href', urlMyProfile);
</script>

