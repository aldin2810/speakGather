<script src="/socket.io/socket.io.js"></script>
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark" style="z-index: 3;">
    <a class="navbar-brand" href="#">
        <img src="/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        SpeakGather
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls=" navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon" style="z-index: 3;"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" id="home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  id="my-profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  id="notifications"><i class="fa-solid fa-bell" style="cursor: pointer"></i>
                    <span class="badge badge-light" id = "numberN"></span></a>
                <div id="notificationsResults" class="my-2 my-lg-0"></div>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0" autocomplete="off" id="codeForm" style ="margin-right: 15px">
            <input id="codeInput" class="form-control mr-sm-2" type="search" placeholder="Code of lecture"
                   aria-label="Search" name = "searchName" style="width:250px">
            <button  id="codeLecture" class="btn my-2 my-sm-0" type="submit">Go</button>
        </form>
        <form class="form-inline my-2 my-lg-0" style="margin-right:1%" autocomplete="off" id="searchUsersForm">
            <input id="searchUsersInput" class="form-control mr-sm-2" type="search" placeholder="Search users by username"
                   aria-label="Search" name = "searchName" style="width:250px">
            <div id="searchUserResults" class="my-2 my-lg-0"></div>
            <button  id="myUsersSearch" class="btn my-2 my-sm-0" type="submit">Search</button>
        </form>
        <form class="form-inline my-2 my-lg-0" autocomplete="off" id="searchForm">
            <input id="searchInput" class="form-control mr-sm-2" type="search" placeholder="Lecture's name or category"
                   aria-label="Search" name = "searchName" style="width:250px">
            <div id="searchResults" class="my-2 my-lg-0"></div>
            <button  id="mysearch" class="btn my-2 my-sm-0" type="submit">Search</button>
        </form>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/login">Log in</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="signup">Sign up</a>
            </li>
        </ul>
    </div>
</nav>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
